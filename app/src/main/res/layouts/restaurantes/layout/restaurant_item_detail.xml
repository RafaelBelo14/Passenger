<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".Menus.menus.MainActivity">

    <ImageView
        android:id="@+id/detalhesRestaurantImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/restaurant_example2" />


    <TextView
        android:id="@+id/detalhesRestaurantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalhesRestaurantImage"
        android:layout_gravity="top"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1"
        android:fontFamily="@font/hind_semibold"
        android:text="Moustache Cafe"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/detalhesRestaurantName" >

        <TextView
            android:id="@+id/detalhesRestaurantOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aberto agora"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_button"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/detalhesStar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star" />
                <ImageView
                    android:id="@+id/detalhesStar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star" />
                <ImageView
                    android:id="@+id/detalhesStar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star" />
                <ImageView
                    android:id="@+id/detalhesStar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_border_24" />
                <ImageView
                    android:id="@+id/detalhesStar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_border_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/detalhesRestaurantPriceLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$$"
                android:gravity="right"
                android:textColor="@color/button_entrar"
                android:textSize="@dimen/text_choice"
                android:fontFamily="@font/hind_semibold"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/line1"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Morada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Morada"
            android:gravity="left"
            android:textColor="@color/button_entrar"
            android:textSize="@dimen/text_body"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <TextView
            android:id="@+id/detalhesRestaurantVicinity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1133 West Fork Street - 59601"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_button"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>



    <Button
        android:id="@+id/queroIrButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/hind_regular"
        android:gravity="center"
        android:text="Quero ir!"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button" />


</RelativeLayout>