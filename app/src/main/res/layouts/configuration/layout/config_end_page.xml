<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"
        android:onClick="goConfig12"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Tudo pronto!"
        android:fontFamily="@font/sora_semibold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title"/>

    <ImageView
        android:id="@+id/voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:src="@drawable/voice_line" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" >

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hind_regular"
            android:gravity="center"
            android:text="O teu perfil está agora configurado. Podes alterar todas estas definições no teu perfil, futuramente e se assim o entenderes."
            android:textColor="@color/white"
            android:textSize="@dimen/text_body" />

    </LinearLayout>

    <Button
        android:id="@+id/entrar"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_configuration_background"
        android:gravity="center"
        android:text="@string/seguinte"
        android:onClick="goStartMenu"
        android:fontFamily="@font/hind_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button"/>

    <TextView
        android:id="@+id/reset"
        android:layout_below="@id/entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Recomeçar"
        android:onClick="goConfig1"
        android:fontFamily="@font/sora_semibold"
        android:textColor="@color/button_entrar"
        android:textSize="@dimen/text_edittext"/>

</RelativeLayout>