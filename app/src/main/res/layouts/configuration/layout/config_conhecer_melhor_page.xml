<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/back"
        android:onClick="goConfig2"/>

    <ImageView
        android:id="@+id/voice"
        android:layout_below="@id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/voice_line" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" >

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_regular"
            android:gravity="center"
            android:text="Quero conhecer-te melhor."
            android:textColor="@color/white"
            android:textSize="@dimen/text_body" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_regular"
            android:gravity="center"
            android:text="Fala-me um pouco sobre ti!"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_body" />

    </LinearLayout>

    <Button
        android:id="@+id/entrar"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/seguinte"
        android:fontFamily="@font/hind_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button"/>

    <ImageView
        android:id="@+id/progress"
        android:layout_below="@id/entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/progress_bar"
        android:onClick="goConfig4"/>

</RelativeLayout>