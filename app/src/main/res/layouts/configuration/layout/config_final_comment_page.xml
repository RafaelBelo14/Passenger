<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".Menus.menus.MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/back"
        android:onClick="backConfig11"/>

    <ImageView
        android:id="@+id/voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:src="@drawable/voice_line" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" >

        <TextView
            android:id="@+id/commentFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind_regular"
            android:gravity="center"
            android:text="Ah! Já sinto que te conheço melhor.\nConsigo sentir a nossa amizade a crescer meu amigo! Espero ser a melhor companheira de viagem que\nalguma vez tiveste"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSeguinteFinalComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/hind_regular"
        android:gravity="center"
        android:text="@string/seguinte"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button" />

    <TextView
        android:id="@+id/buttonReset"
        android:layout_below="@id/buttonSeguinteFinalComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Recomeçar"
        android:fontFamily="@font/sora_semibold"
        android:textColor="@color/button_entrar"
        android:textSize="@dimen/text_edittext"/>

</RelativeLayout>