<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/touristicItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_background"
    android:elevation="8dp"
    android:padding="15dp"
    android:onClick="goTouristicDetail"
    android:layout_margin="20dp">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/touristicImage"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/restaurant_example" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/touristicName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moustache Cafe"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_body"
                    android:fontFamily="@font/hind_semibold"/>

                <TextView
                    android:id="@+id/touristicOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9h-22h"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_button"
                    android:fontFamily="@font/hind_regular"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/touristicRating"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/touristicVicinity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/touristicPriceLevel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/touristicPhotoReference"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/touristicLatitude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/touristicLongitude"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/touristicMute"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>

</RelativeLayout>