<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="260dp"
            android:src="@drawable/back"
            android:onClick="goTouristicList" />

        <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/exit" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu" />

    </LinearLayout>

    <ImageView
        android:id="@+id/restaurant_image"
        android:layout_width="match_parent"
        android:layout_below="@id/linear0"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/restaurant_example2" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/restaurant_image"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon_descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/hind_semibold"
            android:layout_gravity="top"
            android:text="Moustache Cafe"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="stars"
                android:gravity="right"
                android:textColor="@color/button_entrar"
                android:textSize="@dimen/text_button"
                android:fontFamily="@font/hind_semibold"
                tools:ignore="NestedWeights,RtlHardcoded" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$$"
                android:gravity="right"
                android:textColor="@color/button_entrar"
                android:textSize="@dimen/text_button"
                android:fontFamily="@font/hind_semibold"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/line1"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Horário"
            android:gravity="left"
            android:textColor="@color/button_entrar"
            android:textSize="@dimen/text_choice"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <TextView
            android:id="@+id/horarioDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9h-22h"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_button"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/line3"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/morada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Morada"
            android:gravity="left"
            android:textColor="@color/button_entrar"
            android:textSize="@dimen/text_choice"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <TextView
            android:id="@+id/moradaDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1133 West Fork Street - 59601"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_button"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/line4"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contacto"
            android:gravity="left"
            android:textColor="@color/button_entrar"
            android:textSize="@dimen/text_choice"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <TextView
            android:id="@+id/contactDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="406-449-4249"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_button"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/line5"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detalhes"
            android:gravity="left"
            android:textColor="@color/button_entrar"
            android:textSize="@dimen/text_choice"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <TextView
            android:id="@+id/detalhesDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reserva no teu dia e te oferecemos espumante, bolo de aniversário e uma rodada de shots para todos!"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_button"
            android:fontFamily="@font/hind_semibold"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <Button
        android:id="@+id/ir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line6"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/hind_regular"
        android:gravity="center"
        android:onClick=""
        android:text="Quero ir!"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button" />

    <TextView
        android:id="@+id/outrasOpcoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/ir"
        android:text="Ver outras opções"
        android:gravity="center"
        android:onClick="goTouristicList"
        android:textColor="@color/button_entrar"
        android:textSize="@dimen/text_button"
        android:fontFamily="@font/hind_regular"
        tools:ignore="RtlHardcoded" />


</RelativeLayout>