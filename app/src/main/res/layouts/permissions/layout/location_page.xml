<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".Menus.menus.MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/menu" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:fontFamily="@font/sora_semibold"
        android:gravity="center"
        android:text="Olá, João!"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/heading"
        android:src="@drawable/location" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sora_extrabold"
            android:gravity="center"
            android:text="Ativar localização"
            android:textColor="@color/white"
            android:textSize="@dimen/text_subtitle" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hind_regular"
            android:gravity="center"
            android:text="Ativa a tua localização para que eu te possa dar as melhores recomendações!"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body" />

    </LinearLayout>

    <Button
        android:id="@+id/entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/hind_regular"
        android:gravity="center"
        android:text="Ativar"
        android:onClick="goConfig11"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button" />

    <TextView
        android:id="@+id/naoAtivar"
        android:layout_below="@id/entrar"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/button_entrar"
        android:layout_height="wrap_content"
        android:text="Não ativar" />

</RelativeLayout>