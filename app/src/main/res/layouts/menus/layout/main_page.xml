<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".Menus.menus.MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="220dp"
        android:gravity="center"
        android:text="@string/passenger"
        android:fontFamily="@font/sora_extrabold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/entrar"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:onClick="goLogin"
            android:layout_margin="5dp"
            android:text="@string/entrar"
            android:fontFamily="@font/hind_regular"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/registar"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/button_register_background"
            android:text="@string/registar"
            android:textColor="@color/white"
            android:gravity="center"
            android:onClick="goRegister"
            android:fontFamily="@font/hind_regular"
            android:layout_margin="5dp"
            android:textSize="@dimen/text_button"/>
    </LinearLayout>

</RelativeLayout>