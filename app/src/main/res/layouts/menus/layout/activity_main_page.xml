<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context=".Menus.menus.MainActivity">

    <LinearLayout
        android:id="@+id/linear0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/exitSession"
            android:layout_below="@id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/exit" />

        <ImageView
            android:id="@+id/menu"
            android:layout_below="@id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu" />

    </LinearLayout>

    <ImageView
        android:id="@+id/voice"
        android:layout_below="@id/linear0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/voice_line" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/restaurantesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_choice_activity"
            android:fontFamily="@font/hind_semibold"
            android:gravity="center"
            android:text="Restaurantes"
            android:textColor="@color/black"
            android:textSize="@dimen/text_button" />

        <Button
            android:id="@+id/atracaoTuristicaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_choice_activity"
            android:fontFamily="@font/hind_semibold"
            android:gravity="center"
            android:text="Atrações Turísticas"
            android:textColor="@color/black"
            android:textSize="@dimen/text_button" />

        <Button
            android:id="@+id/atracaoLudicaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_choice_activity"
            android:fontFamily="@font/hind_semibold"
            android:gravity="center"
            android:text="Atividades Lúdicas"
            android:textColor="@color/black"
            android:textSize="@dimen/text_button" />

    </LinearLayout>


</RelativeLayout>